@page
@model Shop.UI.Pages.Admin.StockModel
@{
}
<h2>Stock</h2>
<div>
    <div class="columns">
        <div class="column is-3">
            <table class="table">
                <tr valign-if="product in products" @@click="selectProduct(product)">
                    <tb>{{product.description}}</tb>
                </tr>
            </table>
        </div>
        <div class="column is-6">
            <table class="table" v-if="selectedProduct">
                <tr valign-for="stock in selectedProduct.stock">
                    <td><input v-model="stock.description"/></td>
                    <td><input v-model="stock.qty"/></td>
                </tr>
            </table>
            <a class="button is-warning" @@click="updateStock">Update Stock</a>
        </div>
        <div class="column is-3">
            <h2 class="title">New Stock</h2>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.description" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.qty" />
                </div>
            </div>
            <a class="button is-success" @@click="addStock">Add</a>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/admin/stock.js"></script>
}
